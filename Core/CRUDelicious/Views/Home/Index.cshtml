@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Crudelicious</h1>

    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mt-5">Check out some recent dishes!</h2>
        </div>
        <div>
            <a class="mr-5" href="/Create">Add a dish</a>
        </div>
    </div>
            <table class="table table-striped">
                <tr>
                    <th>Item Name</th>
                </tr>
                @foreach (Dish i in ViewBag.AllItems) 
                {
                    <tr>
                        <td><a href="/dish/@i.DishId">@i.Name</a> by @i.Chef</td>
                    </tr>
                }
            </table>

</div>

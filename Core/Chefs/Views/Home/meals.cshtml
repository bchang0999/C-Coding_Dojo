@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4"><a href="/">Chefs</a> | Dishes</h1>            
</div>
<a href="/newDish">Add A Dish</a>

<h1>Check out our roster of Chefs!</h1>
<table class="table.table-striped">
    <tr>
        <th>Dish Name</th>
        <th>Chef</th>
        <th>Tastiness</th>
        <th>Calories</th>
    </tr>
    @foreach (Dish i in ViewBag.AllItems)
    {
        <tr>
            <td>@i.Name </td>
            <td>@i.Creator.Fname @i.Creator.Lname</td>
            <td>@i.Tastiness</td>
            <td>@i.Calories</td>
        </tr>
    }
</table>
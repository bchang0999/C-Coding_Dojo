@model Wedding
<div class="d-flex justify-content-between">
    <div class="mr-auto p-2">
        <h1>Plan Your Wedding!</h1>
    </div>
    <div class="d-flex justify-content-between">
        <div class="p-2"><a href="/Dashboard">Dashboard</a></div>
        <div class="p-2"><a href="/">LogOut</a></div>
    </div>
</div>

<div class="d-flex justify-content-between">
    <form action="/WeddingDetails" method="post">
        <div class="form-group">
            <div class="d-flex justify-content-between">
                <h5>Wedder One </h5>
                <label for="WedderOne"></label>
                <input asp-for="WedderOne" class="form-group">
                <span asp-validation-for="WedderOne" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between">
                <h5>Wedder Two </h5>
                <label for="WedderTwo"></label>
                <input asp-for="WedderTwo" class="form-group">
                <span asp-validation-for="WedderTwo" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between">
                <h5>Wedding Date </h5>
                <label for="Date"></label>
                <input type="date" asp-for="Date" class="form-group">
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between">
                <h5>Address </h5>
                <label for="Address"></label>
                <input asp-for="Address" class="form-group">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div>
                <input asp-for="UserId" type="hidden" value='@Context.Session.GetInt32("UserId")' >
            </div>
        </div>
        <div class="form-wedding">
            <input type="submit" value="Create" class="btn btn-info">
        </div>
    </form>
</div>